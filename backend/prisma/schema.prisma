generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlanType {
  BASIC
  PREMIUM
  ENTERPRISE
}

model Tenant {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  location  String
  address   String?
  phone     String?
  email     String?
  whatsapp  String?
  
  // WiFi
  wifiNetwork  String?
  wifiPassword String?
  
  // Plan
  planType     PlanType @default(BASIC)
  planExpiry   DateTime?
  
  // Theme
  primaryColor   String @default("#8B7355")
  secondaryColor String @default("#A0826D")
  accentColor    String @default("#C19A6B")
  logoUrl        String?
  
  // Features
  hasWeather      Boolean @default(false)
  hasDirections   Boolean @default(false)
  hasRestaurants  Boolean @default(false)
  hasCustomChat   Boolean @default(false)
  
  // Content
  welcomeMessage  String?
  testimonial     String?
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  admins      AdminUser[]
  images      Image[]
  guests      Guest[]
  checkIns    CheckIn[]
  analytics   Analytics[]
  
  @@index([slug])
  @@index([planType])
  @@map("tenants")
}

model AdminUser {
  id       String @id @default(cuid())
  email    String @unique
  password String // Hashed with bcrypt
  name     String
  
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([tenantId])
  @@index([email])
  @@map("admin_users")
}

model Image {
  id       String @id @default(cuid())
  url      String
  key      String // S3 key
  filename String
  size     Int
  mimeType String
  
  tenantId String
  tenant   Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([tenantId])
  @@map("images")
}

model Guest {
  id          String    @id @default(cuid())
  name        String
  email       String?
  phone       String?
  cpf         String?
  
  tenantId    String
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  checkIns    CheckIn[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([tenantId])
  @@index([email])
  @@map("guests")
}

model CheckIn {
  id           String    @id @default(cuid())
  
  guestId      String
  guest        Guest     @relation(fields: [guestId], references: [id], onDelete: Cascade)
  
  tenantId     String
  tenant       Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  checkInDate  DateTime
  checkOutDate DateTime?
  roomNumber   String?
  adults       Int       @default(1)
  children     Int       @default(0)
  notes        String?
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@index([tenantId])
  @@index([guestId])
  @@index([checkInDate])
  @@map("checkins")
}

model Analytics {
  id        String   @id @default(cuid())
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  event     String   // 'page_view', 'chat_message', 'screen_change', etc
  screen    String?
  metadata  String?  // JSON string with extra data
  
  userAgent String?
  ipAddress String?
  
  createdAt DateTime @default(now())
  
  @@index([tenantId])
  @@index([event])
  @@index([createdAt])
  @@map("analytics")
}
